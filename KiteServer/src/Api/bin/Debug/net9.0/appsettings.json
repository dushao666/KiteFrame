{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=3306;Database=KiteServer;Uid=root;Pwd=123456;CharSet=utf8mb4;",
    "Redis": "localhost:6379"
  },
  "DatabaseSettings": {
    "DatabaseType": 0,
    "CommandTimeout": 30,
    "EnableSqlLog": false,
    "EnableCodeFirst": true,
    "EnableSoftDelete": true,
    "TablePrefix": "",
    "EnableAuditFields": true
  },
  "RedisSettings": {
    "Enabled": false,
    "ConnectionString": "localhost:6379",
    "Database": 0,
    "InstanceName": "KiteServer",
    "CommandTimeout": 5000,
    "ConnectTimeout": 5000,
    "SyncTimeout": 5000
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 10485760,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "KiteServer",
    "Audience": "KiteServer",
    "ExpiryMinutes": 60,
    "RefreshTokenExpiryDays": 7
  },
  "CacheSettings": {
    "EnableMemoryCache": true,
    "EnableRedisCache": false,
    "DefaultExpirationMinutes": 30,
    "SlidingExpirationMinutes": 10,
    "MaxMemoryCacheSizeMB": 100
  },
  "FileUploadSettings": {
    "MaxFileSize": 10485760,
    "AllowedExtensions": [ ".jpg", ".jpeg", ".png", ".gif", ".pdf", ".doc", ".docx", ".xls", ".xlsx" ],
    "UploadPath": "uploads"
  },
  "CorsSettings": {
    "Enabled": true,
    "AllowedOrigins": [ "http://localhost:3000", "http://localhost:5173" ],
    "AllowCredentials": true,
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
    "AllowedHeaders": [ "*" ],
    "ExposedHeaders": [ "X-Total-Count", "X-Page-Count" ]
  },
  "HealthCheckSettings": {
    "Enabled": true,
    "EnableDatabaseCheck": true,
    "EnableRedisCheck": false,
    "TimeoutSeconds": 10,
    "DetailedErrors": false
  },
  "RateLimitSettings": {
    "Enabled": false,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      }
    ]
  },

  "SwaggerSettings": {
    "Enabled": true,
    "Title": "KiteServer API",
    "Description": "KiteServer 后端管理系统 API 文档",
    "Version": "v1",
    "Contact": {
      "Name": "KiteServer Team",
      "Email": "support@kiteserver.com",
      "Url": "https://github.com/kiteserver"
    },
    "License": {
      "Name": "MIT",
      "Url": "https://opensource.org/licenses/MIT"
    },
    "Servers": [
      {
        "Url": "/",
        "Description": "当前服务器"
      }
    ],
    "EnableJwtAuth": true,
    "EnableXmlComments": true,
    "XmlCommentFiles": [],
    "EnableAnnotations": true,
    "EnableInProduction": false,
    "RoutePrefix": "swagger",
    "DocumentTitle": "KiteServer API 文档"
  },
  "AllowedHosts": "*"
}
