{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=3306;Database=kite_test;Uid=root;Pwd=123456;CharSet=utf8mb4;",
    "MySQL": "Server=localhost;Port=3306;Database=kite_test;Uid=root;Pwd=123456;CharSet=utf8mb4;",
    "PostgreSQL": "Host=localhost;Port=5432;Database=kite_test;Username=postgres;Password=123456;",
    "SQLServer": "Server=localhost;Database=kite_test;User Id=sa;Password=YourPassword123;",
    "SQLite": "Data Source=kite_test.db",
    "Oracle": "Data Source=(DESCRIPTION=(ADDRESS=(PROTOCOL=TCP)(HOST=localhost)(PORT=1521))(CONNECT_DATA=(SERVICE_NAME=ORCL)));User Id=system;Password=oracle;",
    "Redis": "192.168.1.155:6379,allowAdmin=true,password=asdf12"
  },
  "DatabaseSettings": {
    "DatabaseType": 0,
    "EnableSqlLog": true,
    "EnableCodeFirst": true,
    "EnableSoftDelete": true,
    "EnableAuditFields": true
  },
  "RedisSettings": {
    "Enabled": false,
    "Database": 1,
    "CommandTimeout": 10000
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Information",
        "Microsoft.AspNetCore.Routing.EndpointMiddleware": "Warning",
        "Microsoft.AspNetCore.Mvc.Infrastructure": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning",
        "SqlSugar": "Information",
        "Application": "Information",
        "Serilog.AspNetCore.RequestLoggingMiddleware": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/dev-log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "fileSizeLimitBytes": 52428800,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext} {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "@l in ['Error', 'Fatal']"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "logs/errors/error-.txt",
                  "rollingInterval": "Day",
                  "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}{NewLine}消息: {Message:lj}{NewLine}异常详情: {Exception}{NewLine}属性: {Properties:j}{NewLine}========================================{NewLine}"
                }
              }
            ]
          }
        }
      }
    ]
  },
  "JwtSettings": {
    "SecretKey": "DevelopmentSecretKeyThatIsAtLeast32CharactersLong!",
    "ExpiryMinutes": 480,
    "RefreshTokenExpiryDays": 30
  },
  "CacheSettings": {
    "EnableMemoryCache": true,
    "EnableRedisCache": true,
    "DefaultExpirationMinutes": 5,
    "SlidingExpirationMinutes": 2,
    "MaxMemoryCacheSizeMB": 50
  },
  "FileUploadSettings": {
    "MaxFileSize": 52428800,
    "UploadPath": "uploads/dev"
  },
  "CorsSettings": {
    "Enabled": true,
    "AllowedOrigins": [ "http://localhost:3000", "http://localhost:5173", "http://localhost:8080", "http://localhost:9000", "http://localhost:8848", "http://localhost:8849" ],
    "AllowCredentials": true
  },
  "HealthCheckSettings": {
    "Enabled": true,
    "EnableDatabaseCheck": true,
    "EnableRedisCheck": true,
    "DetailedErrors": true
  },
  "RateLimitSettings": {
    "Enabled": false,
    "PolicyType": "Sliding",
    "EnableIpRateLimit": true,
    "EnableUserRateLimit": false,
    "StatusCode": 429,
    "Message": "请求过于频繁，请稍后再试",
    "FixedWindow": {
      "Window": 60,
      "PermitLimit": 100,
      "QueueLimit": 0
    },
    "SlidingWindow": {
      "Window": 60,
      "PermitLimit": 100,
      "SegmentsPerWindow": 6,
      "QueueLimit": 0
    },
    "TokenBucket": {
      "TokenLimit": 100,
      "TokensPerPeriod": 10,
      "ReplenishmentPeriod": 10,
      "QueueLimit": 0
    },
    "Concurrency": {
      "PermitLimit": 100,
      "QueueLimit": 0
    }
  },

  "SwaggerSettings": {
    "Enabled": true,
    "EnableInProduction": false,
    "Servers": [
      {
        "Url": "http://localhost:5153",
        "Description": "开发服务器"
      },
      {
        "Url": "https://localhost:7153",
        "Description": "开发服务器 (HTTPS)"
      }
    ]
  }
}
