{
  "ConnectionStrings": {
    "DefaultConnection": "Server=prod-mysql-server;Port=3306;Database=kite_prod;Uid=kiteserver_user;Pwd=${MYSQL_PASSWORD};CharSet=utf8mb4;",
    "MySQL": "Server=prod-mysql-server;Port=3306;Database=kite_prod;Uid=kiteserver_user;Pwd=${MYSQL_PASSWORD};CharSet=utf8mb4;",
    "PostgreSQL": "Host=prod-pgsql-server;Port=5432;Database=kite_prod;Username=kiteserver_user;Password=${PGSQL_PASSWORD};",
    "SQLServer": "Server=prod-sqlserver;Database=kite_prod;User Id=kiteserver_user;Password=${SQLSERVER_PASSWORD};",
    "SQLite": "Data Source=/var/data/kite_prod.db",
    "Oracle": "Data Source=(DESCRIPTION=(ADDRESS=(PROTOCOL=TCP)(HOST=prod-oracle-server)(PORT=1521))(CONNECT_DATA=(SERVICE_NAME=KITE)));User Id=kiteserver_user;Password=${ORACLE_PASSWORD};",
    "LogDB": "Server=prod-mysql-server;Port=3306;Database=kite_log;Uid=kiteserver_user;Pwd=${MYSQL_PASSWORD};CharSet=utf8mb4;",
    "Redis": "${REDIS_CONNECTION_STRING}"
  },
  "DatabaseSettings": {
    "DatabaseType": 0,
    "CommandTimeout": 60,
    "EnableSqlLog": false,
    "EnableCodeFirst": false,
    "EnableSoftDelete": true,
    "EnableAuditFields": true
  },
  "RedisSettings": {
    "Enabled": true,
    "ConnectionString": "${REDIS_CONNECTION_STRING}",
    "Database": 0,
    "CommandTimeout": 3000,
    "ConnectTimeout": 3000,
    "SyncTimeout": 3000
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.AspNetCore": "Error",
        "Microsoft.EntityFrameworkCore": "Error",
        "System": "Error",
        "KiteServer": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/kiteserver/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 90,
          "fileSizeLimitBytes": 104857600,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  },
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "KiteServer",
    "Audience": "KiteServer",
    "ExpiryMinutes": 30,
    "RefreshTokenExpiryDays": 3
  },
  "CacheSettings": {
    "EnableMemoryCache": true,
    "EnableRedisCache": true,
    "DefaultExpirationMinutes": 60,
    "SlidingExpirationMinutes": 30,
    "MaxMemoryCacheSizeMB": 200
  },
  "FileUploadSettings": {
    "MaxFileSize": 5242880,
    "AllowedExtensions": [ ".jpg", ".jpeg", ".png", ".pdf", ".doc", ".docx" ],
    "UploadPath": "/var/uploads/kiteserver"
  },
  "CorsSettings": {
    "Enabled": true,
    "AllowedOrigins": [ "https://yourdomain.com", "https://admin.yourdomain.com" ],
    "AllowCredentials": true,
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE" ],
    "AllowedHeaders": [ "Content-Type", "Authorization" ],
    "ExposedHeaders": [ "X-Total-Count" ]
  },
  "HealthCheckSettings": {
    "Enabled": true,
    "EnableDatabaseCheck": true,
    "EnableRedisCheck": true,
    "TimeoutSeconds": 5,
    "DetailedErrors": false
  },
  "RateLimitSettings": {
    "Enabled": true,
    "PolicyType": "Sliding",
    "EnableIpRateLimit": true,
    "EnableUserRateLimit": true,
    "StatusCode": 429,
    "Message": "请求过于频繁，请稍后再试",
    "FixedWindow": {
      "Window": 60,
      "PermitLimit": 60,
      "QueueLimit": 0
    },
    "SlidingWindow": {
      "Window": 60,
      "PermitLimit": 60,
      "SegmentsPerWindow": 6,
      "QueueLimit": 0
    },
    "TokenBucket": {
      "TokenLimit": 60,
      "TokensPerPeriod": 10,
      "ReplenishmentPeriod": 10,
      "QueueLimit": 0
    },
    "Concurrency": {
      "PermitLimit": 50,
      "QueueLimit": 10
    }
  },

  "SwaggerSettings": {
    "Enabled": false,
    "EnableInProduction": false,
    "Servers": [
      {
        "Url": "${API_BASE_URL}",
        "Description": "生产服务器"
      }
    ]
  }
}
